<h1>Sign In</h1>

<div class='form-container'>
  <%= form_tag sessions_path do%>

    <div>
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </div>

    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <br />

    <div>
      <%= submit_tag 'Sign In' %>
      <%= button_to 'Forgotten Password?', new_password_reset_path %>
    </div>

  <%end%>
</div>
