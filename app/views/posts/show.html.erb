<h1><%= @post.title %></h1>
<p>Category: <%= @category.title %></p>
<p><%= @post.body %></p>
Posted by: <%= @post.user_full_name %>

<h1>Create Commment</h1>
<%= form_for [@post, @comment ] do |c| %>
<div>
  <%= c.label :body%><br />
  <%= c.text_area :body %> <br />
</div>
  <%= c.submit %>
  <% end %>


<h1>All Comments</h1>
<% @post.comments.each do |comment| %>
Comment from: <%= comment.user_full_name %>
<%= comment.body %> <br />
<% if can? :delete, comment %>
<button><%= link_to 'Delete Comment', post_comment_path(@post, comment),
method: :delete,
data: {confirm: 'are you sure?'} %></button>
<hr />
<% end %>
<% end %>


<hr />
<% if can? :manage, @post %>
<%= link_to 'Edit Post', edit_post_path(@post) %>
<%= link_to 'Delete Post', post_path(@post),
    method: :delete,
    data: { confirm: 'Are you sure?' } %>
<% end %>
