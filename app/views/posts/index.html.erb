<h1>All Posts</h1>

<div>
  <button><%= link_to 'Sort by Tags', tags_path %></button>
</div>

<%= form_tag posts_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search By Post", :name => nil %>
  </p>
<% end %>

<% @post.each do |p| %>
  <%= link_to p.title, post_path(p) %>
<hr />
<% end %>

<%= paginate @post %>
