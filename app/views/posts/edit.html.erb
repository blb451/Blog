<h1>Edit Post</h1>

<%= @post.errors.full_messages.join(', ') %>

<div class='form-container'>
  <%= form_for @post do |f| %>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>

    <div>
      <%= f.label :category %>
      <%= f.collection_select :category_id, Category.all, :id, :title %>
    </div>

    <div>
      <%= f.label :tag %>
      <%= f.collection_select(:tag_ids, Tag.all, :id, :name, {}, { multiple: true, class: 'chosen-select'})%>
    </div>

    <%= f.submit %>

  <%end%>
</div>


<script>$('.chosen-select').chosen({ width: '90%'})</script>
